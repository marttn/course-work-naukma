@model IEnumerable<coursework.Models.CourseModule>

@{
    ViewBag.Title = "CourseModules";
}
@Html.Partial("_SideNavPartial")
<div id="main">
    <span style="font-size:30px;cursor:pointer" onclick="openNav()">&#9776;</span>
    <h2>CourseModules</h2>

    <p>
        @Html.ActionLink("Create New", "CreateCourseModule", new { id = Model.FirstOrDefault()?.OnboardingCourseId })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditCourseModule", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "DeleteCourseModule", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>